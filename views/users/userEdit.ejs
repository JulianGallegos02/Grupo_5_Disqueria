<html>
<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>

            <main>
                <section class="usersEdit-Container">
                    <h2 class="titular">Editar Usuario:</h2>

                    <form class="edit" action="/users/edit/<%= usuarioEncontrado.id %>?_method=PUT"
                        enctype="multipart/form-data" method="POST" class="usersEdit-form">
                        <div class="usersInfo">
                            <label for="nombre">Nombre:</label>
                            <input type="text" value="<%= usuarioEncontrado.first_name %>" name="nombre" id="nombre"
                                class="nombreUsuario">
                        </div>
                        <div class="usersInfo">
                            <label for="apellido">Apellido:</label>
                            <input type="text" value="<%= usuarioEncontrado.last_name %>" name="apellido" id="apellido" class="apellidoUsuario">
                        </div>
                        <div class="usersInfo">
                            <label for="email">Email:</label>
                            <input type="text" value="<%= usuarioEncontrado.email %>" name="email" id="email"  class="emailUsuario">
                        </div>
                        <div class="usersInfo">
                            <label for="avatar">Imagen:</label>
                            <input type="file" value="<%= usuarioEncontrado.image  %> " name="avatar"
                                class="buscar-Imagen">
                        </div>
                        <div class="usersInfo">
                            <button type="submit" class="boton-editar">Editar Cuenta</button>
                        </div>
                    </form>
                    
                    <form action="/users/edit/<%= usuarioEncontrado.id %>?_method=DELETE" method="POST"
                        class="usersDelete-form">
                        <div class="usersInfo">
                            <button type="submit" class="boton-borrar">Eliminar Cuenta</button>
                        </div>
                    </form>

                </section>
            </main>

            <%- include("./partials/footer") %>
    </body>

</html>