<html>

    <%- include("./partials/head") %>

<body>

    <body>
        <%- include("./partials/header") %>
        <main>
            <section class="register-container">
                <h2> Registrate</h2>
                <form action="/users/register" enctype="multipart/form-data" method="POST" class="register-form">
                    <div class="nombre-apellido">
                        <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                    </div>
                    <div class="nombre-apellido">
                        <input type="text" name="apellido" id="apellido" placeholder="Apellido" required>
                    </div>
                    <div class="email">
                        <input type="email" name="email" id="email" placeholder="E-Mail" required>
                    </div>
                    <div class="password">
                        <input type="password" name="password" id="password" placeholder="Contraseña" required>
                    </div> 
                    <div class="avatar">
                        <label for="avatar">Foto de perfil:</label>
                        <input type="file" name="avatar" id="avatar">
                    </div>           
                        <article class="botones">
                            <button class="boton-registro" type="submit">Registrate</button>
                        </article>
                    <article>
                        <p class="pregunta">¿Ya tenés cuenta?</p>
                        <article class="botones2">
                            <a href= /users/login><p class="login-button"> Inicia sesión</p></a>
                        </article>
                    </article>
                </form>
            </section>
        </main>

        <%- include("./partials/footer") %>
    </body>

</html>