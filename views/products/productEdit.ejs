<html>
    <%- include("./partials/head") %>

    <body>
    <%- include("./partials/header") %>

        <main>
            <section class = "productEdit-Container">
            <h2 class="titular">Editar producto: "<%= disco.name %>"</h2>

            <form class="edit" action="/products/edit/<%= disco.id %>?_method=PUT" enctype="multipart/form-data" method="POST" class="productEdit-form">
                <div>
                    <label for="album">Nombre del Album:</label>
                    <input type="text" value="<%= disco.name %>" name="album" id="album" class="nombreAlbum">
                </div>
                <div>
                    <label for="artista">Nombre del Artista:</label>
                    <input type="text" value="<%= disco.artist_id %>" name="artista" id="artista" class="nombreArtista">
                </div>
                <div>
                    <label for="precio">Precio:</label>
                    <input type="text" value="<%= disco.price %>" name="precio" id="precio" class="precio">
                </div>
                <div>
                    <label for="descripcion">Descripción:</label>
                    <textarea name="descripcion" id="descripcion" class="campo-descripcion"><%= disco.description %></textarea>
                </div>
                <div>
                    <label for="genero">Género:</label>
                    <select name="genero" id="genero" class="nombreArtista">
                        <option value="" disabled selected>- Seleccione el género -  </option>
                        <% generos.forEach(genre => { %>
                            <option value="<%= genre.id %>"><%= genre.genre_name %></option>
                            <% }); %>

                    </select>
                </div>
                <div>
                    <label for="discografica">Discografica:</label>
                    <select name="artista" id="artista" class="nombreArtista">
                        <option selected >- Seleccione la Discografica -  </option>
                        <% label.forEach(label => { %>
                            <option value="<%= label.id %>"><%= label.name %></option>
                            <% }); %>
                        </select>
                    
                </div>
                <div>
                    <label for="cover">Imagen:</label>
                    <input type="file" value="<%= disco.image %>" name="cover" class="buscar-Imagen">
                </div>
                <div>
                    <button type="submit" class= "boton-editar">Editar</button>
                </div>
            </form>
            <form class="delete" action="/products/edit/<%= disco.id %>?_method=DELETE" method="POST" class="productEdit-form">
                <div>
                    <button type="" class= "boton-borrar">Eliminar producto</button>
                </div>
            </form>
        </section>
        </main>

       <%- include("./partials/footer") %>
    </body>
</html>