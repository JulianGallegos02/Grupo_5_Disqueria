<html>
<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>

            <main>
                <section class="detalle-compra">

                    <article class="imagen-producto">
                        <img class="imagen-detalle" src="/images/cover/<%=discoEncontrado.image%>">

                        <div class="titulo-banda">
                            <p class="titulo">
                                <%=discoEncontrado.name %>
                            </p>
                            <a href="/products/artistDetail/<%= discoEncontrado.artists.id%>" class="link-nombre">
                                <p class="banda">
                                    <%=discoEncontrado.artists.name %>
                                </p>
                            </a>
                        </div>

                    </article>

                    <article class="boton-opciones">
                        <article class="elegir-formato">
                            <p>Elegi un formato</p>
                        </article>
                        <article class="opciones-formato">
                            <article class="elegir-placeholder">
                                <p>Elegi un formato</p>
                            </article>
                            <div class="opcion-formato" id="op1">
                                <i class="fas fa-record-vinyl formato-icono"></i>
                                <p class="formato-texto">Vinilo</p>
                                <p class="formato-precio">$<%= discoEncontrado.price + 1000%></p>
                            </div>
                            <div class="opcion-formato" id="op2">
                                <i class="fas fa-tape formato-icono"></i>
                                <p class="formato-texto">Cassette</p>
                                <p class="formato-precio">$<%= discoEncontrado.price + 500%></p>
                            </div>
                            <div class="opcion-formato" id="op3">
                                <i class="fas fa-compact-disc formato-icono"></i>
                                <p class="formato-texto">CD's</p>
                                <p class="formato-precio">$<%= discoEncontrado.price + 100%></p>
                            </div>
                            <div class="opcion-formato" id="op4">
                                <i class="far fa-play-circle formato-icono"></i>
                                <p class="formato-texto">Digital</p>
                                <p class="formato-precio">$<%= discoEncontrado.price%></p>
                            </div>
                            <a class="agregar-carrito" href="/products/cart">Agregar al carrito</a>
                        </article>

                        <article class="spotify-player">
                        <%- discoEncontrado.player  %> 
                        </article>
                    </article>

                    <article class="descripcion">
                            <%=discoEncontrado.description %>
                    </article>

                    <article class="datos-tecnicos">
                        <ul class="lista-tecnica">
                            <li>Label: <a href=# class="link-tecnico">
                                    <%=discoEncontrado.label.name %>
                                </a></li>
                            <li>Genre: <a href=# class="link-tecnico">
                                    <%=discoEncontrado.genre.genre_name %>
                                </a></li>
                            <li>Artist: <a href="/products/artistDetail/<%= discoEncontrado.artists.id%>"
                                    class="link-tecnico">
                                    <%=discoEncontrado.artists.name %>
                                </a></li>
                        </ul>
                    </article>

                </section>

                <section class="artistBox">
                    <div class="albumesArtista">
                        <% for(let i=0; i < discosSimilares.length; i++) { %>

                            <article class="album">
                                <a class="boton-disco" href="/products/detail/<%= discosSimilares[i].id%>">
                                    <img class="cover-art" src="/images/cover/<%=discosSimilares[i].image%>"
                                        alt="cover">
                                    <div class="info-album">
                                        <p class="titulo-album">
                                            <%=discosSimilares[i].name %>
                                        </p>
                                        <p class="banda-album">
                                            <%=discosSimilares[i].artists.name %>
                                        </p>
                                    </div>
                                </a>
                            </article>

                            <%} %>
                    </div>
                </section>

            </main>

            <%- include("./partials/footer") %>
    </body>
    <script src="/js/productDetail.js"></script>
</html>