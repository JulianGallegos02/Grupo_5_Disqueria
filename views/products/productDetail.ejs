<html>
<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>

            <main>
                <section class="detalle-compra">

                    <article class="imagen-producto">
                        <img class="imagen-detalle" src="/images/cover/<%=discoEncontrado.image%>">

                        <div class="titulo-banda">
                            <p class="titulo">
                                <%=discoEncontrado.name %>
                            </p>
                            <a href="/products/artistDetail/<%= discoEncontrado.artists.id%>" class="link-nombre">
                                <p class="banda">
                                    <%=discoEncontrado.artists.name %>
                                </p>
                            </a>
                        </div>

                    </article>

                    <article class="boton-opciones">
                        <article class="opcion-agregar-carrito">



                        </article>

                        <article class="spotify-player">
                            <iframe style="border-radius:12px" src="https://open.spotify.com/embed/album/4NNq2vwTapv4fSJcrZbPH7?utm_source=generator" width="100%" height="380" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>

                        </article>
                    </article>

                    <article class="descripcion">
                        <p>
                            <%=discoEncontrado.description %>
                        </p>
                    </article>

                    <article class="datos-tecnicos">
                        <ul class="lista-tecnica">
                            <li>Label: <a href=# class="link-tecnico">
                                    <%=discoEncontrado.label.name %>
                                </a></li>
                            <li>Genre: <a href=# class="link-tecnico">
                                    <%=discoEncontrado.genre.genre_name %>
                                </a></li>
                            <li>Artist: <a href="/products/artistDetail/<%= discoEncontrado.artists.id%>"
                                    class="link-tecnico">
                                    <%=discoEncontrado.artists.name %>
                                </a></li>
                        </ul>
                    </article>

                </section>

                <section class="artistBox">
                    <div class="albumesArtista">
                        <% for(let i=0; i < discosSimilares.length; i++) { %>

                            <article class="album">
                                <a class="boton-disco" href="/products/detail/<%= discosSimilares[i].id%>">
                                    <img class="cover-art" src="/images/cover/<%=discosSimilares[i].image%>"
                                        alt="cover">
                                    <div class="info-album">
                                        <p class="titulo-album">
                                            <%=discosSimilares[i].name %>
                                        </p>
                                        <p class="banda-album">
                                            <%=discosSimilares[i].artists.name %>
                                        </p>
                                    </div>
                                </a>
                            </article>

                            <%} %>
                    </div>
                </section>

            </main>

            <%- include("./partials/footer") %>
    </body>

</html>